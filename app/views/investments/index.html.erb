<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <h3>Investments</h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <table class='table'>
        <tr>
          <td><strong>Business</strong></td>
          <td><strong>Investment Amount</strong></td>
          <td><strong>Date</strong></td>
        </tr>
        <% @investments.each do |investment| %>
        <tr>
          <div class='prospect'>
            <td>
              <%= investment.business_name %>
            </td>
            <td>
              <%= investment.amount %>
            </td>
            <td>
              <%= investment.date %>
            </td>
          </div>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
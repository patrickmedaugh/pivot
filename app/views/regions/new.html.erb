<div class="region-data form-group">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <%= image_tag(@region.image) %><br><br>

        <%= form_for(@region, html: {multipart: true}) do |f|%>
        <h4>
          <%= f.label :name %><br>
          <%= f.text_field :name %><br><br>
          <%= f.label :description %><br>
          <%= f.text_area :description %><br><br>
          <%= f.label :image, "New Image " %>
          <%= f.file_field :image, class: 'file-field' %><br>
          <% if current_user.guest? %>
            <%= f.label :email %><br>
            <%= f.text_field :email %>
          <% end %>
        </h4>
          <%= f.submit "Create Region", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container business-info">
        <div class="individual_business">
          <div class="col-xs-12">
            <div class="region-admin">
              <h2>Create Region</h2>
        <%= form_for(@region, html: {multipart: true}) do |f|%>
        <p><%= image_tag(@region.image) %></p>
        <p><%= f.label :name %></p>
        <div class='element'><p><%= f.text_field :name, value: @region.name %></p></div>
        <p><%= f.label :description %></p>
        <div class='element'><p color:'black'><%= f.text_area :description, value: @region.description %></p></div>

        <% if current_user.guest? == true %>
       <p><%= f.label :email %></p>
       <div class='element'><p><%= f.text_field :email %></p></div>
        <% end %>
        <br>
        <p><%= f.file_field :image, class: 'file-field'%></p>
        <br>
      <p><%= f.submit "Create Region", class: "btn btn-success" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

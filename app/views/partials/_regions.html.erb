<h1>Regions</h1>
<div class="container business-info">
  <div class="row">
    <% @regions.each do |region| %>
      <div class="col-lg-3 col-md-3 col-sm-6">
        <div class="item">
          <%= link_to region.name, region_businesses_path(region) %><br>
          <%= link_to(image_tag(region.image_file_name), region_businesses_path(region)) %><br>
          Number of businesses: <%= business_count(region) %><br>
          <%= region.description %>
        </div>
      </div>
    <% end %>
  </div>
</div>

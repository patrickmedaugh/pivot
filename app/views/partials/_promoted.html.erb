<div class="container business-info">
  <div class="row">
    <% @businesses.each do |business| %>
      <div class="col-lg-3 col-md-5 col-sm-5">
        <div class="item">
          <%= link_to( image_tag(business.image), region_business_path(region: business.region_id, id: business.id)) %><br>
          <%= business.name %><br>
        </div>
      </div>
    <% end %>
  </div>
</div>

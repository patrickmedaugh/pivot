<div class="container business-info">
        <div class="individual_business">
          <div class="col-xs-12">
            <div class="region-form edit-form">
      <h2>Edit Business</h2>

        <%= form_for(:business, url: :regional_admin_business, html: {multipart: true}, method: :put) do |f|%>
          <p><%= image_tag(@business.image) %></p>
          <p><%= f.label :name %></p>
          <div class='element'><p><%= f.text_field :name, value: @business.name %></p></div>
          <p><%= f.label :description %></p>
          <div class='element'><p color:'black'><%= f.text_area :description, value: @business.description %></p></div>
          <p><%= f.label :funding_needed %></p>
          <div class='element'><p color:'black'><%= f.text_field :funding_needed, value: number_to_currency(@business.funding_needed), class: "lend-box" %></p></div>
          <p><%= f.label :funding_to_date %></p>
          <div class='element'><p color:'black'><%= f.text_field :funding_to_date, value: number_to_currency(@business.funding_to_date), class: "lend-box" %></p></div>
          <p><%= f.file_field :image, class: 'file-field'%></p>
      <p><%= f.submit "Update", class: "btn btn-success" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

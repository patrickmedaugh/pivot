<%= form_for(@user) do |f| %>
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, value: @user.first_name %><br /><br />
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, value: @user.last_name%><br /><br />
  <%= f.hidden_field :username, value: @user.username %>
  <%= f.label :email %><br />
  <%= f.text_field :email, value: @user.email %><br /><br />
  <%= f.label :password %><br />
  <%= f.password_field :password, value: @user.password %><br /><br />
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, value: @user.password %><br /><br />
  <%= f.submit "Update Account", class: 'btn btn-success' %>
<% end %>
